{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true
    },
    "exclude": ["test.ts"],
    "include": ["src"]
}
