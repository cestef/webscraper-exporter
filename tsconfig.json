{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "ES2020",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true
    },
    "include": ["src"]
}
